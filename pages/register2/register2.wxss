/* pages/register0/register0.wxss */
page{
  height: 100%;
  background-color: rgb(244, 238, 241);
}


.register{
  padding:0 14rpx;
}

.register .title{
  font-size: 50rpx;
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
  color:rgb(214, 159, 173);
  border-radius: 10rpx;
  margin-left: 28%;
  margin-top: 5%;
  margin-bottom: 5%;
}

.detial{
  font-size: 38rpx;
  font-weight: 540;
}

.input{
  border: 2rpx solid #646464;
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  padding: 5rpx 30rpx;
  border-radius: 10rpx;
  margin: 2%;
  background-color: rgb(252, 247, 247);
}


.btn{
  display: flex;
  justify-content: space-between;
  margin: 80rpx;
}

.btn .btn-active{
  opacity: 0.6;
}

.setion{
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #f2f1f7;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  text-align: center;
}

.setion text{
  color: #646464;
  font-size: 29rpx;
}

.img{
  width: 50rpx;
  height: 50rpx;
}

